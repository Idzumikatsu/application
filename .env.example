# Переменные окружения для Docker сервисов
# Внимание: Этот файл содержит плейсхолдеры для секретов
# Реальные значения должны быть установлены через секреты GitHub Actions

# PostgreSQL
POSTGRES_DB=crm_system
POSTGRES_USER=${POSTGRES_USER:-crm_user}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-default_password_change_in_secrets}

# JWT
JWT_SECRET=${JWT_SECRET:-default_jwt_secret_change_in_production}

# Email
EMAIL_USERNAME=${EMAIL_USERNAME:-your-email@example.com}
EMAIL_PASSWORD=${EMAIL_PASSWORD:-your-app-password-here}

# Telegram
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN:-your-telegram-bot-token-here}
TELEGRAM_BOT_USERNAME=${TELEGRAM_BOT_USERNAME:-@your_bot_username}

# Database URL (формируется автоматически для Spring Boot)
DATABASE_URL=jdbc:postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Spring Boot дополнительные переменные
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/${POSTGRES_DB}
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect

# Другие сервисы (если нужны)
REDIS_URL=${REDIS_URL:-redis://redis:6379}
RABBITMQ_DEFAULT_USER=${RABBITMQ_USER:-guest}
SPRING_BOOT_ACTUATOR_HEALTH_MAIL_ENABLED=${MAIL_HEALTH_ENABLED:-false}
RABBITMQ_DEFAULT_PASS=${RABBITMQ_PASSWORD:-guest}

# PostgreSQL Health Check переменные
POSTGRES_HEALTHCHECK_USER=${POSTGRES_USER}
POSTGRES_HEALTHCHECK_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_HEALTHCHECK_DB=${POSTGRES_DB}

# Spring Boot Health Check переменные
SPRING_BOOT_HEALTHCHECK_ENABLED=true
SPRING_BOOT_HEALTHCHECK_PATH=/actuator/health
SPRING_BOOT_HEALTHCHECK_TIMEOUT=30s
SPRING_BOOT_HEALTHCHECK_INTERVAL=10s